#!/usr/bin/env python

import itertools
import numpy


def generate(i, phi, theta):
    with open("data.csv", "w") as dfile:
        dfile.write("slice,phi,theta,FILE\n")
        for s in itertools.product([i], phi, theta):
            dfile.write("{},{},{},some.png\n".format(s[0], s[1], s[2]))

slices = numpy.arange(0.0,  10.0, 2.0)
theta  = numpy.arange(0.0, 360.0, 10.0)
phi    = [90.0] 

print(phi)
print(theta)
for s in slices: 
    generate( s, phi, theta )
